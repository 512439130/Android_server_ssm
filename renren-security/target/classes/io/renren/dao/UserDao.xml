<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.UserDao">


	<select id="queryToken"  resultType="io.renren.entity.User">
		select * from tb_user
		where user_phone = #{userPhone} and user_password = #{userPassword}
	</select>

	<insert id="register" parameterType="io.renren.entity.User"
		useGeneratedKeys="true" keyProperty="userId">
		insert into tb_user
		(
		`user_phone`,
		`user_nickname`,
		`user_password`,
		`user_token`
		)
		values
		(
		#{userPhone},
		#{userNckname},
		#{userPassword},
		#{userToken}
		)
	</insert>

	<select id="queryObject" resultType="io.renren.entity.User">
		select * from t_user where
		user_id = #{value}
	</select>
	<select id="queryList" resultType="io.renren.entity.User">
		select * from t_user order by user_id desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<insert id="save" parameterType="io.renren.entity.User"
		useGeneratedKeys="true" keyProperty="userId">
		insert into t_user
		(
		`phone`,
		`password`
		)
		values
		(
		#{phone},
		#{password}
		)
	</insert>


	<update id="update" parameterType="io.renren.entity.User">
		update t_user
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="password != null">`password` = #{password}, </if>
		</set>
		where user_id = #{userId}
	</update>

</mapper>